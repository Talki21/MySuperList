<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_inn_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="230dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/card_inn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/card_inn_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toStartOf="@+id/edit_inn_remove"
            android:layout_margin="5dp">


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/card_inn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/title"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_inn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/card_inn_box"
            android:layout_alignTop="@+id/card_inn_box"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp">


            <Button
                android:id="@+id/card_inn_Remove"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                />

            <Button
                android:id="@+id/card_inn_Edit"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                />
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
